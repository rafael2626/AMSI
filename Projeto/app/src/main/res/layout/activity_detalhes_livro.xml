<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="vistas.DetalhesReservaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCapa"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <EditText
                android:id="@+id/etPessoas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numero de Pessoas"
                android:inputType="number" />

            <EditText
                android:id="@+id/etAndar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Andar"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/cb_Suite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suite" />

            <CheckBox
                android:id="@+id/cb_Mini_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MiniBar" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_action_save_foreground" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>